{
  "name": "aws-infrasec-mcp-server",
  "version": "1.1.0",
  "description": "AWS Infrastructure Security MCP Server",
  "main": "build/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/index.ts",
    "start": "bun run build/index.js",
    "clean": "rm -rf build dist",
    "bundle": "bun build src/index.ts --outfile=dist/index.js --minify --target=node",
    "build:prod": "bun run build && bun run bundle",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "validate": "bun run lint && bun run build",
    "docker:build": "docker build -t aws-infrasec-mcp .",
    "docker:run": "docker run -it --rm -e AWS_REGION=${AWS_REGION:-us-east-1} -v ~/.aws:/home/mcpuser/.aws:ro aws-infrasec-mcp"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.943.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.0",
    "eslint-plugin-security": "^3.0.0",
    "globals": "^16.2.0",
    "prettier": "^3.7.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.48.0"
  }
}
